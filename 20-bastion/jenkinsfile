pipeline {
    agent {
        label 'AGENT-1'
    }
    environment {
        appVersion = ''
    }
    options{
        timeout (time:30, unit:'MINUTES')
    }
    //Build
    stages {
        stage ('init') {
            steps {
                script {
                    withAWS(credentials: 'aws-creds', region: 'us-east-1') {
                        sh """
                            cd 20-bastion
                            terraform init -reconfigure
                        """
                    }
                }
            }
        }
        stage ('plan') {
            steps {
                script {
                    withAWS(credentials: 'aws-creds', region: 'us-east-1') {
                        sh """
                        cd 20-bastion
                        terraform plan
                        """
                    }
                }
            }
        }
        stage ('apply') {
            steps {
                script {
                    withAWS(credentials: 'aws-creds', region: 'us-east-1') {
                        sh """
                        cd 20-bastion
                        terraform apply -auto-approve
                        """
                    }
                }
            }
        }
    }
    post {
        always {
            echo 'i will say hello again'
        }
        success {
            echo 'hello success'
        }
        failure {
            echo 'hello failure'
        }
    }
    
}